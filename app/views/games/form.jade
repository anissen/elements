extends ../layouts/default

block content
  - var action = '/games'
  if (!game.isNew)
    - action += '/'+game.id

  if (typeof errors !== 'undefined')
    .fade.in.alert.alert-block.alert-error
      a.close(data-dismiss="alert", href="javascript:void(0)") x
      ul
        each error in errors
          li= error.type

  .row
    .span7
      form.form-horizontal(method="post", action=action)
        if (!game.isNew)
          input(type="hidden", name="_method", value="PUT")

        .control-group
          label.control-label(for='title') Opponent
          .controls
            //input.input-xlarge(type='text', name="players", value="", placeholder='Enter an opponent or leave blank for random')
            select(multiple, name="invites")
              //option(value="#{req.user._id}", selected) #{req.user.name}
              option(value="5161bea95f854f145f000003") Mr. T

        .control-group
          label.control-label(for='desc') Cards
          .controls
            select(multiple, name="cards")
              option(value="small-guy") Cannon Fodder
              option(value="big-guy") Big Guy
              option(value="water") Water
              option(value="water") Water

        .form-actions
          button.btn.btn-primary(type='submit') Save changes
          &nbsp;
          a.btn(href='/games', title="cancel") Cancel
