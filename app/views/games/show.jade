extends ../layouts/default

block main
  h1= game.title

block content
  .row
    .col-span-12
      .well 
        p.lead Here is some text
        a.btn.btn-primary.btn-large(href='/games/' + game._id + '/play/') Play

  .row
    for player in game.players
      .col-span-4
        .panel
          .panel-heading 
            a(href='/users/' + player.user._id)=player.user.name
            case player.readyState
              when 'pending': span.text-error &nbsp;(pending)
              when 'accepted': span.text-warning &nbsp;(accepted)
              when 'ready': span.text-success &nbsp;(ready)
          p Some text here
          .panel.panel-info
            .panel-heading Deck
            ul
              for card in player.deck
                li 
                  a(href='/cards/' + card._id)=card.name

  p
    br
    form.center.form-inline.confirm(action="/games/" + game._id, method="post")
      .form-actions.pull-right
        a.btn(href='/games/' + game._id + '/edit', title="edit") Edit
        &nbsp;&nbsp;
        input(type="hidden", name="_method", value="DELETE")
        button.btn.btn-danger(type="submit") Delete
