extends ../layouts/default

block main
  h1 Game

block content
  .row-fluid
    ul.thumbnails
      each game in games
        li.span4
          .thumbnail.well.well-small
            a(href='/games/' + game._id)
              img(style="width: 400px; height: 300px;", src="http://lorempixel.com/400/300/abstract/?" + Math.random()).img-rounded
            h4.text-center
              each player, index in game.players
                a(href='users/' + player.user._id)=player.user.name
                if (index < game.players.length - 1) 
                  | &nbsp;vs. 

  if (pages > 1)
    .pagination
      ul
        != createPagination(pages, page)
