
header#header
  .navbar.navbar-fixed-top(role='navigation')
    .navbar-inner
      .container
        a.brand(href='/') Elements
        .nav-collapse.collapse
          ul.nav
            li
              a(href='/games', title="game listing") Games
            li
              a(href="/games/new", title="new game") New game
            li
              a(href="/users", title="users") Users
          ul.nav.pull-right
            if (req.isAuthenticated())
              li
                a(href="/users/"+req.user.id, title="Profile") Profile
              li
                a(href="/logout", title="logout") Logout
            else
              li
                a(href="/login", title="Login") Login
