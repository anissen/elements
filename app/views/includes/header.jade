
header#header
  .navbar
    .container
      a.navbar-toggle(data-toggle='collapse', data-target='.nav-collapse')
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') 
        span.glyphicon.glyphicon-fire(style='color: darkred') 
        | Elements
      .nav-collapse.collapse
        ul.nav
          li(class=(req.path === '/games') ? 'active' : '')
            a(href='/games', title="games").active 
              span.glyphicon.glyphicon-th 
              | Games
          li(class=(req.path === '/games/new') ? 'active' : '')
            a(href="/games/new", title="new game") 
              span.glyphicon.glyphicon-plus 
              | New game
          li(class=(req.path === '/users') ? 'active' : '')
            a(href="/users", title="users")
              span.glyphicon.glyphicon-user 
              | Users
        ul.nav.pull-right
          if (req.isAuthenticated())
            li(class=(req.path === '/users/' + req.user._id) ? 'active' : '')
              a(href="/users/" + req.user._id, title="Profile") 
                span.glyphicon.glyphicon-home 
                | Profile (#{req.user.name})
            li
              a(href="/logout", title="logout") 
                span.glyphicon.glyphicon-off 
                | Logout
          else
            li
              a(href="/login", title="Login") 
                span.glyphicon.glyphicon-lock 
                | Login
